{
  "id": "com.se.wiser",
  "version": "0.0.1",
  "compatibility": ">=3.2.0",
  "sdk": 2,
  "name": {
    "en": "Schneider Electric Wiser"
  },
  "description": {
    "en": "Adds support for Schnieder Electric Wiser devices."
  },
  "tags": {
    "en": [
      "Schneider",
      "Wiser",
      "Light",
      "Lights",
